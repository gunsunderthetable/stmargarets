}
p.readMore img:hover {
    opacity:0.8;
}

.blogImage img {
    float:left;
    padding:0 20px 0px 0;
}
p.tags {
    margin-bottom:0;
}
p.shareBlogStory  {
    margin:0 0 18px 0;
}
p.shareBlogStory img {
    width:30px;
    position: relative;
    top:8px;
}
p.shareBlogStory img:hover {
    cursor:pointer;
